{
    "extends": "airbnb-base",
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 8
    },
    "env": {
        "node": true,
        "es6": true,
        "mocha": true
    },
    "rules": {
        "class-methods-use-this": 0,
        "indent": ["error", 4]
    },
    "overrides": [
        {
            "files": ["*Test.js"],
            "rules": {
                "func-names": "off"
            }
        }
    ]
}